<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_child"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:text="Child"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        app:layout_behavior="top.omooo.admin.chartsdemo.behavior.MoveViewBehavior"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/tv_dependency"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="Dependency"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:text="点击Dependency View会使Dependency向下偏移，但是Child View也会根据Dependency的偏移量来设置自己的偏移量"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.design.widget.CoordinatorLayout>